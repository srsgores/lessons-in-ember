	Filename: layout.jade

	This file contains all layout logic, housing content for the Lessons in Ember slides

doctype html
html.no-js(lang = "en")
	head
		- var title = title || "Lessons in Ember"
		- var description = description || "What I learned from 4 months of emberjs"
		title #{title}
		block head
			block header-meta
				meta(charset = "utf-8")
				meta(http-equiv = "X-UA-Compatible", content = "IE=edge,chrome=1")

				title #{title}
				meta(name = "description", content = "#{description}")
				meta(name = "viewport", content = "width=device-width, initial-scale=1")
			block header-scripts
				script(src = "bower_components/modernizr/modernizr.js")
			block header-styles
				link(rel = "stylesheet", href = "styles/main.css")
	body(role="application")
		header(role="banner")
			block navigation
		.container
			main(role = "main")
				block content
		block footer
			footer(role = "contentinfo")
				small Copyright Lessons in Ember
					date(datetime = "Tue Nov 04 2014 10:41:19 GMT-0700 (Mountain Standard Time)") Tue Nov 04 2014 10:41:19 GMT-0700 (Mountain Standard Time)
		block scripts
			script(src = "bower_components/jquery/dist/jquery.min.js")
			script(src = "bower_components/jquery-migrate/jquery-migrate.min.js")
			script(src = "bower_components/jmpress/jmpress.js")
			script(src = "scripts/main.js")
